<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homescreen_layout"
    style="@style/Widget.SmojifyPropre.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:theme="@style/Theme.SmojifyPropre.AppWidgetContainer">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/trackTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Title">
    <requestFocus android:focusable="true" android:focusableInTouchMode="true"
        android:duplicateParentState="true" />
    </TextView>

    <TextView
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/trackArtist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Artist">
    <requestFocus android:focusable="true" android:focusableInTouchMode="true"
        android:duplicateParentState="true" />
    </TextView>

    <ImageView
        android:id="@+id/btnPrev"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@id/btnPause"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginEnd="58dp"
        android:src="@android:drawable/ic_media_previous"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignStart="@id/btnPause"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginStart="58dp"
        android:src="@android:drawable/ic_media_next"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/btnPause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_media_pause"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_media_play"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/emoji_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/btnPause"
        android:layout_alignParentStart="false"
        android:layout_marginTop="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:textAlignment="textEnd">

        <ImageView
            android:id="@+id/dialog_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:baselineAlignBottom="false"
            android:textAlignment="textStart"
            android:src="@drawable/smojify_logo_200" />
    </LinearLayout>

</RelativeLayout>