<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- First Part: Display Current Song Info -->
    <TextView
        android:id="@+id/current_song_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Current Song Info"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="16dp"/>

    <!-- Second Part: Launch Button -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Smojify"
        android:layout_below="@+id/current_song_info"
        android:layout_centerHorizontal="true"
        android:padding="16dp"/>

    <!-- Third Part: Text Input -->
    <EditText
        android:id="@+id/emoji_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:hint="Type Emojis Here"
        android:inputType="text"
        android:padding="16dp"
        android:textCursorDrawable="@null"/>

    <!-- Fourth Part: Display Reacting Emoji -->
    <TextView
        android:id="@+id/reacting_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emoji_input"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="48sp"
        android:textColor="@android:color/white"/>

</RelativeLayout>
